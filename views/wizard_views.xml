<odoo>
  <!-- Vista del wizard para aceptar pedido -->
  <record id="view_aceptar_pedido_wizard" model="ir.ui.view">
    <field name="name">aceptar.pedido.wizard.form</field>
    <field name="model">tu_pedido_v2.aceptar_pedido_wizard</field>
    <field name="arch" type="xml">
      <form string="Aceptar Pedido">
        <group>
          <field name="order_id" invisible="1"/>
          <field name="tiempo_estimado"/>
          <field name="retira_en_local"/>
          <field name="direccion_entrega"/>
          <field name="notas_adicionales"/>
        </group>
        <footer>
          <button name="action_aceptar" type="object" string="Aceptar Pedido" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Vista del wizard para rechazar pedido -->
  <record id="view_rechazar_pedido_wizard" model="ir.ui.view">
    <field name="name">rechazar.pedido.wizard.form</field>
    <field name="model">tu_pedido_v2.rechazar_pedido_wizard</field>
    <field name="arch" type="xml">
      <form string="Rechazar Pedido">
        <group>
          <field name="order_id" invisible="1"/>
          <field name="motivo_rechazo"/>
        </group>
        <footer>
          <button name="action_rechazar" type="object" string="Rechazar Pedido" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>