    <record id="view_pos_order_delivery_search" model="ir.ui.view">
        <field name="name">pos.order.delivery.search</field>
        <field name="model">pos.order</field>
        <field name="arch" type="xml">
            <search string="Buscar Delivery">
                <field name="tracking_number" string="NÃºmero Pedido"/>
                <field name="partner_id" string="Cliente"/>
                <field name="direccion_delivery" string="DirecciÃ³n"/>
                <filter string="Nuevos" name="nuevos" domain="[('estado_rapido', '=', 'nuevo')]"/>
                <filter string="En PreparaciÃ³n" name="preparacion" domain="[('estado_rapido', 'in', ['aceptado', 'preparacion'])]"/>
                <filter string="Listos" name="listos" domain="[('estado_rapido', '=', 'terminado')]"/>
                <filter string="Despachados" name="despachados" domain="[('estado_rapido', '=', 'despachado')]"/>
                <filter string="Entregados" name="entregados" domain="[('estado_rapido', '=', 'entregado')]"/>
                <separator/>
                <filter string="Hoy" name="hoy" domain="[('date_order', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                <filter string="Ayer" name="ayer" domain="[('date_order', '>=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d')), ('date_order', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado_rapido'}"/>
                    <filter string="Fecha" name="group_fecha" context="{'group_by': 'date_order:day'}"/>
                </group>
            </search>
        </field>
    </record>
